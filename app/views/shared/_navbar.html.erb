<!-- Off-canvas menu for mobile, show/hide based on off-canvas menu state. -->
<div x-data="{ isOpen: false }" @open-dropdown.window="if ($event.detail.id == 1) isOpen = true" class="relative z-40 md:hidden" role="dialog" aria-modal="true">
  <div  :class="isOpen ? '' : 'hidden'" >
    <div
    x-show="isOpen"
    x-transition:enter="transition-opacity ease-linear duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition-opacity ease-linear duration-300"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg"
    class="fixed inset-0 bg-gray-600 bg-opacity-75">
    </div>
    <div 
      x-show="isOpen"
      x-transition:enter="transition ease-in-out duration-300 transform"
      x-transition:enter-start="-translate-x-full"
      x-transition:enter-end="translate-x-0"
      x-transition:leave="transition ease-in-out duration-300 transform"
      x-transition:leave-start="translate-x-0"
      x-transition:leave-end="-translate-x-full"
      class="fixed inset-0 z-40 flex">
      <div class="relative flex w-full max-w-xs flex-1 flex-col bg-knoiz-noir">
        <div class="absolute top-0 right-0 -mr-12 pt-2">
          <button type="button" @click="isOpen = !isOpen" class="ml-1 flex h-10 w-10 items-center justify-center rounded-full focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
            <span class="sr-only">Close sidebar</span>
            <!-- Heroicon name: outline/x-mark -->
            <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="h-0 flex-1 overflow-y-auto pt-5 pb-4">
          <div class="flex flex-shrink-0 items-center justify-center p-6">
            <%= image_tag "knoiz-logo.png", alt: "Knoiz logo", class: "h-8 w-auto" %>
          </div>
          <nav class="mt-5 px-2">
            <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
            <a href="<%= root_path %>" class="<% if params[:controller] == "home" %>bg-knoiz-gris<% end %> text-white group flex items-center px-2 py-2 text-base font-medium rounded-md hover:bg-knoiz-gris">
              <!--
                     Heroicon name: outline/home
                     
                     Current: "text-gray-300", Default: "text-gray-400 group-hover:text-gray-300"
                     -->
              <svg class="text-gray-300 mr-4 flex-shrink-0 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
              </svg>
              Home
            </a>
            <a href="<%= stats_path %>" class="<% if display_stats? %>bg-knoiz-gris<% end %> <% if params[:controller] != "stats" %>mb-2<% end %> text-gray-300 hover:text-white group flex items-center px-2 py-2 text-base font-medium rounded-md hover:bg-knoiz-gris">
              <!-- Heroicon name: outline/users -->
              <svg class="text-gray-400 group-hover:text-gray-300 mr-4 flex-shrink-0 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />
              </svg>
              Stats
            </a>
            <% if params[:controller] == "stats" %>
              <a href="<%= tops_path %>" class="<% if display_tops? %>bg-knoiz-gris<% end %> ml-6 text-knoiz-blanc-gris hover:bg-knoiz-gris hover:text-white group flex items-center px-2 py-2 text-sm font-medium rounded-md hover:bg-spotilab-gris">
                Your top Listened
              </a>
              <a href="<%= recently_path %>" class="<% if display_recently? %>bg-knoiz-gris<% end %> ml-6 text-knoiz-blanc-gris hover:bg-knoiz-gris hover:text-white group flex items-center px-2 py-2 text-sm font-medium rounded-md hover:bg-spotilab-gris">
                Recently played
              </a>
              <a href="<%= top_global_path %>" class="<% if display_top_global? %>bg-knoiz-gris<% end %> ml-6 mb-2 text-knoiz-blanc-gris hover:bg-knoiz-gris hover:text-white group flex items-center px-2 py-2 text-sm font-medium rounded-md hover:bg-spotilab-gris">
                Top 50 global tracks
              </a>
            <% end %>
            <a href="<%= pricing_path %>" class="<% if params[:controller] == "pricing" %>bg-knoiz-gris<% end %> text-gray-300 hover:text-white group flex items-center px-2 py-2 text-base font-medium rounded-md hover:bg-knoiz-gris">
              <!-- Heroicon name: outline/users -->
              <svg class="text-gray-400 group-hover:text-gray-300 mr-4 flex-shrink-0 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 6v.75m0 3v.75m0 3v.75m0 3V18m-9-5.25h5.25M7.5 15h3M3.375 5.25c-.621 0-1.125.504-1.125 1.125v3.026a2.999 2.999 0 010 5.198v3.026c0 .621.504 1.125 1.125 1.125h17.25c.621 0 1.125-.504 1.125-1.125v-3.026a2.999 2.999 0 010-5.198V6.375c0-.621-.504-1.125-1.125-1.125H3.375z" />
              </svg>
              Pricing
            </a>
          </nav>
        </div>
        <% if !session[:user_id] %>
          <%= link_to 'Sign in with Spotify', "/auth/spotify", method: :post, class: "m-2 text-center items-center rounded-md border border-transparent bg-knoiz-vert px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-knoiz-vert-hover focus:outline-none" %>
        <% else %>
          <div class="flex flex-shrink-0 bg-knoiz-gris p-4">
            <a href="<%= info_path %>" class="group block flex-shrink-0">
              <div class="flex items-center">
                <div>
                  <% if @current_user.profile.image.nil? %>
                    <%= image_tag "profile.jpg" , class: "inline-block h-10 w-10 rounded-full" %>
                  <% else %>
                    <%= image_tag @current_user.profile.image , class: "inline-block h-10 w-10 rounded-full" %>
                  <% end %>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-white"><%= @current_user.username %></p>
                  <% if @current_user.subscription.active == false %>
                    <p class="text-sm font-medium text-white">Spotilab Free</p>
                  <% else %>
                    <p class="text-sm font-medium text-white">Spotilab Plus</p>
                  <% end %>
                  <p class="text-sm font-medium text-gray-300 group-hover:text-gray-200">View profile</p>
                </div>
              </div>
            </a>
          </div>
        <% end %>
      </div>
      <div class="w-14 flex-shrink-0">
        <!-- Force sidebar to shrink to fit close icon -->
      </div>
    </div>
  </div>
</div>
