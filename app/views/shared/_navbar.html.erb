                <% else %>
                  <%= image_tag @current_user.profile.image , class: "inline-block h-9 w-9 rounded-full" %>
                <% end %>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-white"><%= @current_user.username %></p>
