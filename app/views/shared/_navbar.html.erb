                <%= form.hidden_field :price, value: 30 %>
                <%= form.submit "Get Unlimited Access ðŸ”“", class: "mt-6 cursor-pointer w-full text-center rounded-2xl border border-transparent bg-knoiz-violet-principale px-3.5 py-3.5 text-base font-medium text-white shadow-sm hover:bg-knoiz-violet-principale-hover focus:outline-none" %>
