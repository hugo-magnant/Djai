                  <p class="text-sm font-medium text-white">Knoiz Free</p>
                <% else %>
                  <p class="text-sm font-medium text-white">Knoiz Plus</p>
                <% end %>
                <p class="text-xs font-medium text-gray-300 group-hover:text-gray-200">View profile</p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="flex-shrink-0 w-14">
      </div>
    </div>
  </div>
</div>
