<div x-data="{ isOpen: false }" @open-dropdown.window="if ($event.detail.id == 1) isOpen = true" class="relative z-40 size2:hidden" role="dialog" aria-modal="true">
  <div  :class="isOpen ? '' : 'hidden'" >
    <div
    x-show="isOpen"
    x-transition:enter="transition-opacity ease-linear duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition-opacity ease-linear duration-300"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg"
    class="fixed inset-0 bg-gray-600 bg-opacity-75">
    </div>
    <div 
      x-show="isOpen"
      x-transition:enter="transition ease-in-out duration-300 transform"
      x-transition:enter-start="-translate-x-full"
      x-transition:enter-end="translate-x-0"
      x-transition:leave="transition ease-in-out duration-300 transform"
      x-transition:leave-start="translate-x-0"
      x-transition:leave-end="-translate-x-full"
      class="fixed inset-0 z-40 flex">
      <div class="relative flex w-full p-10 max-w-xs flex-1 flex-col bg-knoiz-noir">
        <div class="absolute top-0 right-0 -mr-12 pt-2">
          <button type="button" @click="isOpen = !isOpen" class="ml-1 flex h-10 w-10 items-center justify-center rounded-full focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
            <span class="sr-only">Close sidebar</span>
            <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="flex flex-1 flex-col overflow-y-auto">
          <div class="flex flex-shrink-0 items-center justify-center mt-6 mb-6">
            <%= image_tag "knoiz-logo.png", alt: "Knoiz logo", class: "h-8 w-auto" %>
          </div>
          <nav class="mt-5 flex-1 px-2">
            <a href="<%= root_path %>" class="mb-2 text-gray-300 <% if params[:controller] == "home" %>bg-knoiz-gris<% end %> hover:bg-knoiz-gris hover:text-white text-white group flex items-center px-3.5 py-3.5 text-sm font-medium rounded-2xl">
              <svg class="text-knoiz-blanc mr-3 flex-shrink-0 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
              </svg>
              Home
            </a>
            <a href="<%= stats_path %>" class="<% if display_stats? %>bg-knoiz-gris<% end %> mb-2 text-gray-300 hover:bg-knoiz-gris hover:text-white group flex items-center px-3.5 py-3.5 text-sm font-medium rounded-2xl">
              <svg class="text-knoiz-blanc group-hover:text-gray-300 mr-3 flex-shrink-0 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />
              </svg>
              Stats
            </a>
            <% if params[:controller] == "stats" %>
              <%= nav_link("Your top Listened", tops_path, display_tops?) %>
              <%= nav_link("Recently played", recently_path, display_recently?) %>
              <%= nav_link("Top 50 global tracks", top_global_path, display_top_global?) %>
            <% end %>
            <a href="<%= pricing_path %>" class="text-gray-300 <% if params[:controller] == "pricing" %>bg-knoiz-gris<% end %> hover:bg-knoiz-gris hover:text-white group flex items-center px-3.5 py-3.5 text-sm font-medium rounded-2xl">
              <svg class="text-gray-400 group-hover:text-gray-300 mr-3 flex-shrink-0 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 6v.75m0 3v.75m0 3v.75m0 3V18m-9-5.25h5.25M7.5 15h3M3.375 5.25c-.621 0-1.125.504-1.125 1.125v3.026a2.999 2.999 0 010 5.198v3.026c0 .621.504 1.125 1.125 1.125h17.25c.621 0 1.125-.504 1.125-1.125v-3.026a2.999 2.999 0 010-5.198V6.375c0-.621-.504-1.125-1.125-1.125H3.375z" />
              </svg>
              Pricing
            </a>
            <% if @current_user.nil? || !@current_user.subscription.stripe_user_id.present? %>
              <a>
                <%= form_with url: '/checkout_session/create', data: { turbo: false } do |form| %>
                  <%= form.submit "Upgrade to Plus", class: "mt-6 cursor-pointer w-full text-center rounded-2xl border border-transparent bg-knoiz-violet-principale px-3.5 py-3.5 text-base font-medium text-white shadow-sm hover:bg-knoiz-violet-principale-hover focus:outline-none" %>
                <% end %>
              </a>
            <% end %>
          </nav>
        </div>
        <% if !session[:user_id] or !@current_user %>
          <%= link_to 'Sign in with Spotify', "/auth/spotify", method: :post, class: "mb-6 mx-2 text-center items-center rounded-2xl border border-transparent bg-knoiz-violet-principale px-3.5 py-3.5 text-base font-medium text-white shadow-sm hover:bg-knoiz-violet-principale-hover focus:outline-none" %>
        <% else %>
          <%= link_to info_path, class: "rounded-3xl mb-6 bg-knoiz-gris py-3.5 px-3.5 text-sm font-semibold text-white hover:bg-white/20" do %>
            <div class="flex items-center">
              <div>
                <% if @current_user.profile.image.nil? %>
                  <%= image_tag "profile.jpg" , class: "inline-block h-9 w-9 rounded-full" %>
                <% else %>
                  <%= image_tag @current_user.profile.image , class: "inline-block h-9 w-9 rounded-full" %>
                <% end %>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-white"><%= @current_user.username %></p>
                <% if @current_user.subscription.active == false %>
                  <p class="text-sm font-medium text-white">Knoiz Free</p>
                <% else %>
                  <p class="text-sm font-medium text-white">Knoiz Plus</p>
                <% end %>
                <p class="text-xs font-medium text-gray-300 group-hover:text-gray-200">View profile</p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="w-14 flex-shrink-0">
      </div>
    </div>
  </div>
</div>
