<div class="flex items-center justify-center w-full h-full py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="px-10 py-8 shadow bg-knoiz-noir rounded-3xl">
      <%= form_tag url_for(:controller => 'home', :action => 'create_playlist'), method: :post do %>
        <h2 class="mb-4 text-3xl font-bold tracking-tight text-center text-knoiz-blanc">Generate a playlist based on keywords</h2>
        <% if @current_user %>
          <div data-controller="timer" data-timestamp="<%= @current_user.wallet.timestamp.to_i %>" data-subscription="<%= @current_user.subscription.active %>">
            <%= text_field_tag :text_search, "", :required => true, class: "px-4 py-3 block w-full text-knoiz-blanc rounded-md border-none bg-knoiz-gris placeholder-gray-400 focus:border-knoiz-violet-principale focus:outline-none focus:ring-knoiz-violet-principale sm:text-sm", placeholder: "90s playlist ..." %>
            <div class="flex justify-end w-full p-2">
              <span data-target="timer.countdown" class="text-knoiz-blanc"></span>
            </div>
          </div>
        <% else %>
          <%= text_field_tag :text_search, "", :required => true, class: "mb-4 px-4 py-3 block w-full text-knoiz-blanc rounded-md border-none bg-knoiz-gris placeholder-gray-400 focus:border-knoiz-violet-principale focus:outline-none focus:ring-knoiz-violet-principale sm:text-sm", placeholder: "90s playlist ..." %>
        <% end %>
        <%= submit_tag "Create Your Playlist Now âœ¨", id: "submitBtn", class: "cursor-pointer w-full text-center items-center rounded-md border border-transparent bg-knoiz-violet-principale px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-knoiz-violet-principale-hover focus:outline-none" %>
      <% end %>
    </div>
  </div>
</div>



