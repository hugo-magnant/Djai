<script src="https://polyfill.io/v3/polyfill.min.js?version=3.52.1&features=fetch"></script>
<script src="https://js.stripe.com/v3/"></script>
<div class="bg-spotify-noir w-full p-8 rounded-3xl">
  <h1 class="text-3xl font-medium text-spotify-blanc mb-8">User profile</h1>
  <% if @subscription.active %>
    <h2 class="text-white">Your current plan is Spotilab Plus.</h2>
    <p><%= @product[:description] %></p>
    <% if @subscription_info[:canceled_at].present? %>
      <p class="text-white">You requested cancellation on : <%= @subscription_info[:canceled_at] %>.</p>
      <p class="text-white">You can keep using the subscription up until : <%= @subscription_info[:renews_on] %>.</p>
    <% else %>
      <p class="text-white">Renews on : <%= @subscription_info[:renews_on] %></p>
    <% end %>
    <% if @current_user.subscription.canceled == false %>
      <%= form_tag url_for(:controller => 'subscriptions', :action => 'cancel'), method: :get do %>
        <%= submit_tag "Cancel my subscription", class: "mt-4 cursor-pointer w-full text-center items-center rounded-md border border-transparent bg-spotify-orange px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-spotify-orange-hover focus:outline-none" %>
      <% end %>
    <% else %>
      <%= form_tag url_for(:controller => 'subscriptions', :action => 'resume'), method: :get do %>
        <%= submit_tag "Resume my subscription", class: "mt-4 cursor-pointer w-full text-center items-center rounded-md border border-transparent bg-spotify-vert px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-spotify-vert-hover focus:outline-none" %>
      <% end %>
    <% end %>
  <% else %>
    <h2 class="text-white">Your current plan is Spotilab Free.</h2>
    <%= form_with url: '/checkout_session/create', data: { turbo: false } do |form| %>
      <%= form.submit "Upgrade to Spotilab.ai Plus", class: "mt-4 cursor-pointer w-full text-center items-center rounded-md border border-transparent bg-spotify-vert px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-spotify-vert-hover focus:outline-none" %>
    <% end %>
  <% end %>
  <%= form_tag url_for(:controller => 'sessions', :action => 'destroy'), method: :delete do %>
    <%= submit_tag "Log out", class: "mt-4 cursor-pointer w-full text-center items-center rounded-md border border-transparent bg-spotify-rouge px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-spotify-rouge-hover focus:outline-none" %>
  <% end %>
</div>